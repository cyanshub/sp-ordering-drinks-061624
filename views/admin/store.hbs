{{!-- 從本版面最外層即可使套用 bootstrap gird 樣式排版 --}}
<div class="row" style="max-width: 1080px; margin: 0 auto;">

  {{!-- 套用 bootstrap gird 樣式排版 --}}
  <div class="col row d-flex align-items-center mb-4 ">
    {{!-- 圖片區塊 --}}
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
      <img class="img-responsive center-block" src="{{store.cover}}"
        style="width:auto; max-width: 320px; margin-bottom: 1rem; transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;">
      <br>
    </div>
    
    {{!-- 空白欄位填充空間 --}}
    <div class="col-xs col-sm col-md-2 col-lg-3 "></div>
    
    {{!-- 店家資訊 --}}
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h3 class="mb-2">
        <strong style="white-space: nowrap;">{{store.name}}</strong>
      </h3>

      <ul class="list-unstyled">
        <li style="white-space: nowrap;"><strong>地址: </strong> {{store.address}}</li>
        <li style="white-space: nowrap;"><strong>電話: </strong>{{store.phone}}</li>
      </ul>

      <a class="btn btn-outline-secondary mt-2 me-3" href="/admin/stores">返回</a>
      <a class="btn btn-outline-primary mt-2" href="#drink-menu">菜單</a>
    </div>
  </div>

  <hr style="border: none; border-top: 3px solid black;">

  {{!-- 販賣的飲料 --}}
  <div id="drink-menu" class="col-xs-12 mb-3">
    <h3 style="display: inline-block;">有哪些飲料？</h3>
    <span class="small btn-color" style="display: inline-block;">點擊狀態後切換, 畫面將在延遲後更新!</span>

    <div class="drinks-container" style="max-height: 70vh; overflow: auto">
      {{#each drinks}}
      <div>
        <hr style="border: none; border-top: 3px solid black; flex: 1;">
        <div class="d-flex justify-content-between align-items-center mt-0 mb-0 flex-grow-1">
          <span style="flex-grow: 1;">
            <div style="margin-right:1rem">
              <strong>{{this.name}}/ </strong>
              <span class={{#ifCond this.priceM this.priceL}}"d-none"{{/ifCond}}>
              中杯(M) 價格: {{this.priceM}}元/ </span>
              <span>大杯(L) 價格: {{this.priceL}}元/ </span>
            </div>
          </span>

          <span class="me-5" style="min-width: 60px;">{{> drink-ownership-button storeId=../store.id }}</span>
        </div>
        {{/each}}
      </div>
    </div>

  </div>