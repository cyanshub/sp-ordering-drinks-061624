{{!-- 套用自訂編距樣式 --}}
<div class="margin-wrapper">
  {{!-- 實作頁籤 --}}
  {{> store-tabs route = "index"}}
  
  
  {{!-- 案場列表 --}}
  <div class="row mt-3">
    {{#if stores}}
    {{#each stores}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <div class="card mb-4 shadow-sm">
        <a href="/stores/{{this.id}}">
          <img class="card-img-top img-fluid" src="{{this.cover}}" alt="Card image cap"
            style="transition: opacity 0.5s; opacity:0; width:100%; height:320px; object-fit:cover;"
            onload="this.style.opacity=1;">
        </a>
        <div class="card-body">
          <p class="card-text">
  
          <div class="mt-0 text-container">
            <a href="/stores/{{this.id}}">{{this.name}}</a> </span>
          </div>
          </p>
  
  
        </div>
      </div>
    </div>
    {{/each}}
  
    {{else}}
    <h6 class="mt-3 ms-3">尚無店家...</h6>
    {{/if}}
  
  </div>
  
  {{!-- 加上 pagination 分頁器 --}}
  {{>pagination}}
</div>
